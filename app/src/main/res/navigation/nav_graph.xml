<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.tryden.nook.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_prioritiesFragment"
            app:destination="@id/prioritiesFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_homeFragment_to_checklistsFragment"
            app:destination="@id/checklistsFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_homeFragment_to_addFolderFragment"
            app:destination="@id/addFolderFragment"
            app:popEnterAnim="@anim/slide_in_down"
            app:popExitAnim="@anim/slide_out_up"
            app:enterAnim="@anim/slide_in_up"
            app:exitAnim="@anim/slide_out_down"/>
        <action
            android:id="@+id/action_homeFragment_to_checklistFragment"
            app:destination="@id/checklistFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_homeFragment_to_allNotesFoldersFragment"
            app:destination="@id/allNotesFoldersFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_homeFragment_to_notesListFragment"
            app:destination="@id/notesListFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_homeFragment_to_allPrioritiesFragment"
            app:destination="@id/allPrioritiesFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>

    </fragment>
    <fragment
        android:id="@+id/prioritiesFragment"
        android:name="com.tryden.nook.ui.home.priorities.PrioritiesFragment"
        android:label="Priorities"
        tools:layout="@layout/fragment_priorities" >

        <argument android:name="folderTitle"
            android:defaultValue="@null"
            app:nullable="true"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/checklistsFragment"
        android:name="com.tryden.nook.ui.home.checklists.AllChecklistsFragment"
        android:label="Checklists"
        tools:layout="@layout/fragment_checklists" >
        <action
            android:id="@+id/action_checklistsFragment_to_checklistFragment"
            app:destination="@id/checklistFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>

    <fragment
        android:id="@+id/checklistFragment"
        android:name="com.tryden.nook.ui.home.checklists.checklist.ChecklistFragment"
        android:label="Checklist"
        tools:layout="@layout/fragment_checklist" >

        <argument android:name="folderTitle"
            android:defaultValue="@null"
            app:nullable="true"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/allNotesFoldersFragment"
        android:name="com.tryden.nook.ui.home.notes.AllNotesFoldersFragment"
        android:label="fragment_all_notes"
        tools:layout="@layout/fragment_all_notes" >
        <action
            android:id="@+id/action_allNotesFoldersFragment_to_notesListFragment"
            app:destination="@id/notesListFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>
    <fragment
        android:id="@+id/notesListFragment"
        android:name="com.tryden.nook.ui.home.notes.noteslist.NotesListFragment"
        android:label="fragment_notes_list"
        tools:layout="@layout/fragment_notes_list" >
        <action
            android:id="@+id/action_notesListFragment_to_noteFragment"
            app:destination="@id/noteFragment" />

        <argument android:name="folderTitle"
            android:defaultValue="@null"
            app:nullable="true"
            app:argType="string" />
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.tryden.nook.ui.home.notes.noteslist.note.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note" >

        <argument android:name="folderTitle"
            android:defaultValue="@null"
            app:nullable="true"
            app:argType="string" />
    </fragment>

    </fragment>
    <fragment
        android:id="@+id/allPrioritiesFragment"
        android:name="com.tryden.nook.ui.home.priorities.AllPrioritiesFragment"
        android:label="fragment_all_priorities"
        tools:layout="@layout/fragment_all_priorities" >
        <action
            android:id="@+id/action_allPrioritiesFragment_to_prioritiesFragment"
            app:destination="@id/prioritiesFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>
</navigation>